[Unit]
Description=Waybar status bar
Documentation=https://github.com/Alexays/Waybar
After=graphical-session.target

[Service]
ExecStart=/usr/bin/waybar --config /home/melissa/.config/waybar/bottom/config --style /home/melissa/.config/waybar/bottom/style.css
Restart=on-failure
RestartSec=5
Environment=XDG_RUNTIME_DIR=%1
Environment=WAYLAND_DISPLAY=wayland-1


[Install]
WantedBy=default.target

