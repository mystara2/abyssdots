{
    "group/time": {
        "orientation": "horizontal",
        "modules": [
        "custom/timer"
         ]
    },
    "group/misc": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-misc",
            "transition-right-to-left": false
        },
        "modules": [
            "custom/misc",
            "tray"
        ]
    },
    "group/devices": {
        "orientation": "horizontal",
        "modules": [
            "pulseaudio",
            "bluetooth",
            "custom/ddc_brightness",
            "network"
         ]
    },

    "group/system": {
        "orientation": "horizontal",
        "modules": [
            "custom/updates",
            "custom/mako",
            "custom/copyq",
            "custom/power"
         ]
    },

    "bluetooth": {
        "format": "",
        "format-disabled": "",
        "format-connected": "Ôäì {num_connections}",
        "on-click": "blueman-manager",
        "on-click-right": "blueman-manager",
        "tooltip-format": "Ôäì {device_alias}",
        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": "Ôäì {device_alias}"
    },

        "custom/copyq": {
        "format": "Û∞Öç",
        "on-click": "copyq toggle",
        "tooltip": false
    },

    "include": ["~/.config/waybar/dcol_modules/clock.json"],

    "custom/timer": {
        "align": 0,
        "tooltip": false,
        "on-click": "date --date='30 minutes' +%s > /var/tmp/waybar_timer",
        "on-click-right": "echo READY > /var/tmp/waybar_timer",
        "on-click-middle": "date --date='45 minute' +%s > /var/tmp/waybar_timer",
        "on-scroll-up": "$HOME/.config/hypr/scripts/waybar-timer-steps.sh up",
        "on-scroll-down": "$HOME/.config/hypr/scripts/waybar-timer-steps.sh down",
        "interval": 1
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔàÖ",
            "deactivated": "ÔàÑ"
        }
    },

    "cpu": {
        "interval": 10,
        "format": "Û∞çõ {usage}%",
        "format-alt": "{icon0}{icon1}{icon2}{icon3}",
        "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"]
    },

    "custom/padd": {
        "format": "",
        "interval" : "once",
        "tooltip": false
    },

    "custom/misc": {
        "format": "ÓàÄ ",
        "tooltip": false
    },

    "custom/filemanager": {
        "format": "ÔÅº ",
        "on-click": "dolphin",
        "tooltip": false
    },

     "custom/terminal": {
        "format": "Ôíâ ",
        "on-click": "alacritty",
        "tooltip": false
    },

    "custom/editor": {
        "format": "Ôãê",
        "on-click": "geany",
        "tooltip": false
    },

    "custom/browser": {
        "format": "Ôâ© ",
        "on-click": "firefox",
        "tooltip": false
    },

    "custom/obsidian": {
        "format": "Ôàô ",
        "on-click": "obsidian",
        "tooltip": false
    },

    "memory": {
        "interval": 30,
        "format": "{used:0.3f} GB",
        "format-alt": "Û∞æÜ {percentage}%",
        "max-length": 10,
        "tooltip": true,
        "tooltip-format": "Óâ¶  {used:0.1f}GB / {total:0.1f}GB"
    },

    "mpris": {
        "format": "{player_icon} {dynamic}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        "max-length": 1000,
        "interval": 1
    },

    "network": {
        "format-wifi": "Û∞§® {signalStrength}%",
        "format-ethernet": "Û±òñ Wired",
        "tooltip-format": "Û±òñ {ipaddr} ÔÑπ {bandwidthUpBytes} ÔÑ∫ {bandwidthDownBytes}",
        "format-linked": "Û±òñ {eesid}",
        "format-disconnected": "ÔÅ± Disconnected",
        "format-alt": "Û∞§® {essid}",
        "on-click": "alacritty --class nmtui -e nmtui",
        "interval": 5
    },

    "custom/power": {
        "format": "ÔÄë{}",
        "exec": "echo ; echo ÔÄë logout",
        "on-click": "wlogout",
        "interval" : 86400,
        "tooltip": true
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "Ôë¶",
        "on-click-right": "pavucontrol-qt",
        "tooltip-format": "{icon} {desc}",
        "format-icons": {
            "headphone": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "Ô°´",
        "format-source-muted": "ÔÑ±",
        "on-click": "pavucontrol -t 4",
        "tooltip-format": "{format_source} {source_desc} // {source_volume}%",
        "scroll-step": 5
    },

    "custom/spotify": {
        "exec": "/usr/bin/python3 $HOME/.config/waybar/modules/mediaplayer.py --player spotify",
        "format": "ÔÜº {}",
        "return-type": "json",
        "on-click": "playerctl play-pause --player spotify",
        "on-click-right": "playerctl next --player spotify",
        "on-click-middle": "playerctl previous --player spotify",
        "max-length": 25,
        "escape": true,
        "tooltip": true
    },

    "tray": {
        "icon-size": {},
        "spacing": 5
    },

    "custom/updates": {
        "format": "ÔÇ´  {}",
        "exec": "~/.config/hypr/scripts/updates.sh",
        "restart-interval": 60,
        "return-type": "json",
        "escape": true,
        "on-click": "~/.config/hypr/scripts/updates.sh up",
        "tooltip-format": "{}",
        "tooltip": true
    },

    "hyprland/window": {
        "format": " ÔåÉ {}",
        "separate-outputs": true,
        "max-length": 1000
    },

    "hyprland/workspaces": {
        "on-scroll-up": "hyprctl dispatch workspace -1",
        "on-scroll-down": "hyprctl dispatch workspace +1",
        "all-outputs": true,
        "active-only": false,
        "on-click": "activate"
    }
}
