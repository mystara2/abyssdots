{
    "group/power": {
        "orientation": "horizontal",
        "modules": [
            "custom/shutdown",
            "power",
            "reboot"
        ]
    },

    "group/time": {
        "orientation": "horizontal",
        "modules": [
            "clock#time",
            "clock#date"
        ]
    },

    "group/system": {
        "orientation": "horizontal",
        "modules": [
            "cpu",
            "memory",
            "pulseaudio"
        ]
    },

    	"custom/shutdown": {
		"format": "⏻ ",
		"tooltip": false,
		"on-click": "wlogout"
	},
	"custom/reboot": {
		"format": " ",
		"tooltip": false,
		"on-click": "reboot"
	},
	"custom/power": {
		"format": "󰣇 ",
		"tooltip": false
	},
	"clock#time": {
		"interval": 10,
		"format": "{:%H:%M}",
		"tooltip": false
	},
    "clock#date": {
        "interval": 20,
        "format": "{:%b%e, %Y}",
        "tooltip": false
    },
	"cpu": {
		"interval": 5,
		"tooltip": false,
		"format": " {usage}%",
		"format-alt": " {load}",
		"states": {
			"warning": 70,
			"critical": 90
		}
	},
	"memory": {
		"interval": 5,
		"format": " {used:0.1f}G/{total:0.1f}G",
		"states": {
			"warning": 70,
			"critical": 90
		},
		"tooltip": false
	},
	"network": {
		"interval": 5,
		"format-wifi": " {essid} ({signalStrength}%)",
		"format-ethernet": "󰈁",
		"format-disconnected": "No connection",
		"format-alt": "  {ipaddr}/{cidr}",
		"tooltip": false
	},
	"mpris": {
		"dynamic-order": [
			"artist",
      "title"
		],
		"format": " : {dynamic}",
		"format-paused": "  {status_icon} <i>{dynamic}</i>",
		"status-icons": {
			"paused": " "
		},
		"ignored-players": [
			"firefox"
		]
	},
    "hyprland/window": {
        "format": "{}",
        "icon": true,
        "icon-size": 18,
        "margin-left": -20,
        "margin-right": 0
    },
	"hyprland/workspaces": {},
	"pulseaudio": {
		"format": "{icon}  {volume}%",
		"format-bluetooth": "{icon}{volume}%",
		"format-muted": "",
		"format-icons": {
			"headphone": "",
			"hands-free": "",
			"headset": "",
			"phone": "",
			"portable": "",
			"car": "",
			"default": [
				"",
				""
			]
		},
		"scroll-step": 1,
		"on-click": "pavucontrol",
		"tooltip": false
	},
	"tray": {
		"icon-size": 18,
        "spacing": 2
	},

    "custom/l_end": {
        "format": " ",
        "interval" : "once",
        "tooltip": false
    },

    "custom/r_end": {
        "format": " ",
        "interval" : "once",
        "tooltip": false
    },

    "custom/sl_end": {
        "format": " ",
        "interval" : "once",
        "tooltip": false
    },

    "custom/sr_end": {
        "format": " ",
        "interval" : "once",
        "tooltip": false
    },

    "custom/rl_end": {
        "format": " ",
        "interval" : "once",
        "tooltip": false
    },

    "custom/rr_end": {
        "format": " ",
        "interval" : "once",
        "tooltip": false
    },

    "custom/padd": {
        "format": "  ",
        "interval" : "once",
        "tooltip": false
    }
}