#!/usr/bin/env bash

if [ $# -ne 2 ]; then
    echo "Usage: $0 <interface> <up|down>"
    exit 1
fi

interface="$1"
action="$2"

case "$action" in
    up)
        echo "Bringing up $interface..."
        wg-quick up "$interface"
        ;;
    down)
        echo "Bringing down $interface..."
        wg-quick down "$interface"
        ;;
    *)
        echo "Invalid action: $action"
        echo "Usage: $0 <interface> <up|down>"
        exit 1
        ;;
esac

